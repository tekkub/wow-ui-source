<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
	<Script file="InspectPVPFrame.lua"/>
	
	<Frame name="InspectPvpStatTemplate" virtual="true">
		<Size x="160" y="60"/>
		<Layers>
			<Layer level="BORDER">
				<FontString name="$parentBGType" parentKey="BGType" inherits="Game13FontShadow">
					<Anchors>
						<Anchor point="TOPLEFT" x="22" y="0"/>
					</Anchors>
					<Color r="1" g="1" b="1"/>
				</FontString>
				<FontString parentKey="RatingLabel" inherits="GameFontNormal" text="PVP_RATING">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.BGType" relativePoint="BOTTOMLEFT" x="0" y="-4"/>
					</Anchors>
				</FontString>
				<FontString parentKey="Rating" inherits="GameFontHighlight" text="0">
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.RatingLabel" relativePoint="RIGHT" x="4" y="0"/>
					</Anchors>
				</FontString>
				<FontString parentKey="RecordLabel" inherits="GameFontNormal" text="PVP_RECORD">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.RatingLabel" relativePoint="BOTTOMLEFT" x="0" y="-2"/>
					</Anchors>
				</FontString>
				<FontString parentKey="Record" inherits="GameFontHighlight" text="0">
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.RecordLabel" relativePoint="RIGHT" x="4" y="0"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Frame>
	
	<Button name="InspectPvPTalentButtonTemplate" virtual="true">
		<Size x="26" y="26"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="$parentIconTexture" parentKey="Icon">
					<Size x="26" y="26"/>
					<Anchors>
						<Anchor point="CENTER" x="-1" y="2"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="ARTWORK" textureSubLevel="1">
				<Texture name="$parentSlot" inherits="Talent-SingleBorder" parentKey="Slot">
					<Size x="26" y="26"/>
					<Anchors>
						<Anchor point="CENTER" x="-1" y="2"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<Texture name="$parentBorder" parentKey="border" atlas="inspect-talent-selected" useAtlasSize="true">
					<Anchors>
						<Anchor point="CENTER" x="-1" y="2"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Scripts>
			<OnEnter>
				InspectPvPTalentFrameTalent_OnEnter(self);
			</OnEnter> 
			<OnLeave>
				GameTooltip_Hide();
			</OnLeave>
			<OnClick function="InspectPvPTalentFrameTalent_OnClick" />
		</Scripts>
	</Button>
	
	<Frame name="InspectPvPTalentRowTemplate" virtual="true">
		<Size x="110" y="26"/>
		<Frames>
			<Button name="$parentTalent1" inherits="InspectPvPTalentButtonTemplate" parentKey="Talent1">
				<Anchors>
					<Anchor point="LEFT" x="0" y="0"/>
				</Anchors>
			</Button>
			<Button name="$parentTalent2" inherits="InspectPvPTalentButtonTemplate" parentKey="Talent2">
				<Anchors>
					<Anchor point="LEFT" relativeTo="$parentTalent1" relativePoint="RIGHT" x="16"/>
				</Anchors>
			</Button>
			<Button name="$parentTalent3" inherits="InspectPvPTalentButtonTemplate" parentKey="Talent3">
				<Anchors>
					<Anchor point="LEFT" relativeTo="$parentTalent2" relativePoint="RIGHT" x="16"/>
				</Anchors>
			</Button>
		</Frames>
	</Frame>

	<Frame name="InspectPVPFrame" enableMouse="true" parent="InspectFrame" hidden="true" useParentLevel="true" setAllPoints="true" id="2">
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="BG" file="Interface\PVPFrame\PVP-Conquest-Misc">
					<Size x="320" y="355"/>	
					<Anchors>
						<Anchor point="TOPLEFT" x="8" y="-64"/>
					</Anchors>
					<TexCoords left="0.00097656" right="0.31445313" top="0.33789063" bottom="0.888"/>
				</Texture>
			</Layer>
			<Layer level="ARTWORK">
				<FontString parentKey="HKs" inherits="GameFontHighlight">
					<Anchors>
						<Anchor point="TOP" x="0" y="-36"/>
					</Anchors>
				</FontString>
				<Texture parentKey="PortraitBackground" hidden="true">
					<Size x="60" y="60"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="InspectFrame" relativePoint="TOPLEFT" x="-6" y="7" />
					</Anchors>
				</Texture>
				<FontString parentKey="HonorLevel" inherits="GameFontNormalLarge">
					<Anchors>
						<Anchor point="TOP" x="0" y="-84"/>
					</Anchors>
				</FontString>
			</Layer>
			<Layer level="OVERLAY" textureSubLevel="1">
				<Texture parentKey="SmallWreath" atlas="honorsystem-prestige-smallwreath" useAtlasSize="false" hidden="true">
					<Size x="73" y="43"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="InspectFrame" relativePoint="TOPLEFT" x="-12" y="-19" />
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Frames>
			<Frame parentKey="RatedBG" inherits="InspectPvpStatTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.BG" x="0" y="-60"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						self.BGType:SetText(PVP_RATED_BATTLEGROUNDS);
					</OnLoad>
				</Scripts>
			</Frame>
			<Frame parentKey="Arena2v2" inherits="InspectPvpStatTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.RatedBG" relativePoint="BOTTOMLEFT" x="0" y="-10"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						self.BGType:SetText(ARENA_BATTLES_2V2);
					</OnLoad>
				</Scripts>
			</Frame>
			<Frame parentKey="Arena3v3" inherits="InspectPvpStatTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.Arena2v2" relativePoint="BOTTOMLEFT" x="0" y="-10"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						self.BGType:SetText(ARENA_BATTLES_3V3);
					</OnLoad>
				</Scripts>
			</Frame>
			<Frame parentKey="Talents">
				<Size x="300" y="300"/>
				<Anchors>
					<Anchor point="TOP" x="0" y="0"/>
				</Anchors>
				<Frames>
					<Frame name="$parentTalentRow1" inherits="InspectPvPTalentRowTemplate" parentKey="Tier1" id="1">
						<Anchors>
							<Anchor point="TOPLEFT" relativeKey="$parent.$parent.RatedBG" relativePoint="TOPRIGHT" x="32" y="0"/>
						</Anchors>				
					</Frame>
					<Frame name="$parentTalentRow2" inherits="InspectPvPTalentRowTemplate" parentKey="Tier2" id="2">
						<Anchors>
							<Anchor point="TOPLEFT" relativeTo="$parentTalentRow1" relativePoint="BOTTOMLEFT" x="0" y="-20"/>
						</Anchors>				
					</Frame>
					<Frame name="$parentTalentRow3" inherits="InspectPvPTalentRowTemplate" parentKey="Tier3" id="3">
						<Anchors>
							<Anchor point="TOPLEFT" relativeTo="$parentTalentRow2" relativePoint="BOTTOMLEFT" x="0" y="-20"/>
						</Anchors>				
					</Frame>
					<Frame name="$parentTalentRow4" inherits="InspectPvPTalentRowTemplate" parentKey="Tier4" id="4">
						<Anchors>
							<Anchor point="TOPLEFT" relativeTo="$parentTalentRow3" relativePoint="BOTTOMLEFT" x="0" y="-20"/>
						</Anchors>				
					</Frame>
					<Frame name="$parentTalentRow5" inherits="InspectPvPTalentRowTemplate" parentKey="Tier5" id="5">
						<Anchors>
							<Anchor point="TOPLEFT" relativeTo="$parentTalentRow4" relativePoint="BOTTOMLEFT" x="0" y="-20"/>
						</Anchors>				
					</Frame>
					<Frame name="$parentTalentRow6" inherits="InspectPvPTalentRowTemplate" parentKey="Tier6" id="6">
						<Anchors>
							<Anchor point="TOPLEFT" relativeTo="$parentTalentRow5" relativePoint="BOTTOMLEFT" x="0" y="-20"/>
						</Anchors>				
					</Frame>
				</Frames>
			</Frame>
			<Frame parentKey="PortraitMouseOverFrame">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="InspectFramePortraitFrame" relativePoint="TOPLEFT"/>
					<Anchor point="BOTTOMRIGHT" relativeTo="InspectFramePortraitFrame" relativePoint="BOTTOMRIGHT"/>
				</Anchors>
				<Scripts>
					<OnEnter function="InspectPVPFramePortraitMouseOverFrame_OnEnter"/>
					<OnLeave function="GameTooltip_Hide"/>
				</Scripts>
			</Frame>
		</Frames>
		<Scripts>
			<OnLoad function="InspectPVPFrame_OnLoad"/>
			<OnShow function="InspectPVPFrame_OnShow"/>
			<OnHide function="InspectPVPFrame_OnHide"/>
			<OnEvent function="InspectPVPFrame_OnEvent"/>
		</Scripts>
	</Frame>
</Ui>
